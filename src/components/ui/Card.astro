---
import projectImage from '../../assets/images/project.png';
import { Image } from '@astrojs/image/components';
import Tags from '@components/ui/Tags.astro';
import { ImageMetadata } from 'astro';
import { Icon } from 'astro-icon';

interface Props {
	url?: string;
	projectUrl?: string;
	img?: ImageMetadata;
	alt?: string;
	title?: string;
	tags: string[];
	children?: HTMLElement | HTMLElement[];
}

const {
	projectUrl = '#',
	url = '#',
	alt = 'Project image',
	title = 'Project title',
	tags = ['Tags'],
	img = projectImage as unknown as ImageMetadata,
} = Astro.props;

---

<section class="w-full max-w-[425px] p-4 md:w-1/2 lg:w-1/3">
	<article
		data-testId="card"
		class="relative group overflow-clip rounded-xl bg-white p-3 shadow-lg duration-100 hover:scale-105 hover:transform hover:shadow-xl"
	>
		<a
			class="absolute z-10 w-0 h-0 group-hover:p-2 group-hover:w-20 group-hover:h-20 transition-all bg-orange top-0 right-0"
			target="_blank"
			rel="noopener"
			href={projectUrl}
			aria-label="link to project code"
			title="Source Code"
		>
			<Icon class="h-full rotate-45" name="codicon:code" />
		</a>
		<a target="_blank" rel="noopener" href={url} aria-label="link to project">
			<div class="relative flex justify-center items-end overflow-hidden rounded-xl">
				<Image
					src={img.src}
					alt={alt}
					aspectRatio="4:4"
					format="png"
					width={400}
					height={400}
					loading="lazy"
					class=""
				/>
			</div>
			<div class="mt-1 p-2">
				<h3 class="text-xl text-orange lg:text-2xl">{title}</h3>
				<Tags tags={tags} />
			</div>
		</a>
	</article>
</section>
